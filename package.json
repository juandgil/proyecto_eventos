{
    "name": "proyecto-events",
    "version": "1.0.0",
    "main": "dist/index.js",
    "description": "Proyecto para registrar eventos",
    "license": "UNLICENSED",
    "private": true,
    "author": {
        "email": "Juan.gil@coordinadora.com",
        "name": "Juan david gil"
    },
    "scripts": {
        "build": "rimraf dist && tsc -p tsconfig.build.json",
        "lint": "eslint . --ext .ts --fix",
        "format": "prettier --write \"./src/**/*.ts\"",
        "format-check": "prettier --list-different \"./src/**/*.ts\"",
        "dev": "tsc-watch -p tsconfig.build.json --onSuccess \"yarn start-lint-dev\"",
        "start": "node dist/index.js",
        "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/index.js\"",
        "test": "jest --color --verbose --no-cache",
        "coverage": "jest --coverage",
        "release": "standard-version",
        "husky:install": "husky install",
        "start-lint-dev": "node dist/index.js"
    },
    "dependencies": {
        "@fastify/cors": "7.0.0",
        "@fastify/rate-limit": "6.0.0",
        "@fastify/swagger": "^6.1.1",
        "@google-cloud/firestore": "7.9.0",
        "@google-cloud/pubsub": "^4.5.0",
        "@types/named-routes": "^2.0.1",
        "axios": "^1.7.2",
        "body-parser": "^1.20.2",
        "cm-idempotencia": "^1.4.6",
        "dotenv": "^16.0.3",
        "eslint-plugin-import": "^2.27.5",
        "fastify": "^3.29.5",
        "fastify-cors": "^6.0.2",
        "fastify-formbody": "^5.0.0",
        "fastify-helmet": "^5.3.2",
        "fastify-request-logs": "1.1.3",
        "graphql": "^16.8.1",
        "inversify": "6.0.1",
        "jest-junit": "^10.0.0",
        "joi": "^17.11.1",
        "module-alias": "2.2.2",
        "moment-timezone": "^0.5.37",
        "named-routes": "^2.0.7",
        "nodemailer": "^6.9.14",
        "pg-mem": "^2.9.1",
        "pg-promise": "^11.4.3",
        "redis": "^3.1.2",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.13.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "16.2.4",
        "@types/fastify-rate-limit": "^2.1.0",
        "@types/jest": "27.4.1",
        "@types/moment-timezone": "^0.5.30",
        "@types/node": "^18.17.x",
        "@types/nodemailer": "^6.4.15",
        "@types/redis": "^2.8.32",
        "@types/reflect-metadata": "^0.1.0",
        "@types/supertest": "2.0.12",
        "@typescript-eslint/eslint-plugin": "5.36.1",
        "@typescript-eslint/parser": "5.36.1",
        "eslint": "8.14.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "7.0.4",
        "jest": "27.5.1",
        "lint-staged": "^13.2.1",
        "mock-cloud-firestore": "^0.12.0",
        "openapi-types": "^12.1.3",
        "prettier": "2.6.2",
        "rimraf": "3.0.2",
        "standard-version": "9.3.2",
        "supertest": "^7.0.0",
        "ts-jest": "27.1.4",
        "ts-node": "10.7.0",
        "tsc-watch": "5.0.3",
        "typescript": "4.8.4"
    },
    "_moduleAliases": {
        "@common": "dist/common",
        "@modules": "dist/modules",
        "@application": "dist/application",
        "@domain": "dist/domain",
        "@infrastructure": "dist/infrastructure",
        "@configuration": "dist/configuration",
        "@util": "dist/util",
        "@app": "dist/app"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn format && yarn lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "yarn format",
            "yarn lint --fix"
        ]
    }
}
